@*
    @{
        ViewBag.Title = "Index";
    }
*@
@model IEnumerable<mvc.Models.Student>

<h1 class="text-primary text-center"> List of Students</h1>
<div>

    @*<b>Roll No:</b> @Model.RollNo <br />
    <b>Name:</b> @Model.Name <br />
    <b>Class:</b> @Model.Class <br />
    <b>Subject:</b> @Model.Subject <br />*@

<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>RollNo</th>
            <th>Name</th>
            <th>Class</th>
            <th>Subject</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var stdd in Model)
            {
                <tr>
                    <td>@stdd.RollNo</td>
                    <td>@stdd.Name</td>
                    <td>@stdd.Class</td>
                    <td>@stdd.Subject</td>
                </tr>
            }
    </tbody>
</table>
</div>
